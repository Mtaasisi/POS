{
  "manifest_version": 3,
  "name": "LATS CHANCE WhatsApp Integration",
  "version": "1.0.0",
  "description": "Adds a shortcut button to WhatsApp Web for quick access to LATS CHANCE management interface",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["chrome-extension-content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LATS CHANCE WhatsApp Integration"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ]
}
