        if (currentStock === 0) {
          alerts.push({
            productId: product.id,
            productName: product.name,
            currentStock,
            threshold: 0,
            type: 'out' as const
          });
        } else if (currentStock <= 5) {
          alerts.push({
            productId: product.id,
            productName: product.name,
            currentStock,
            threshold: 5,
            type: 'critical' as const
          });
        } else if (currentStock <= lowStockThreshold) {
          alerts.push({
            productId: product.id,
            productName: product.name,
            currentStock,
            threshold: lowStockThreshold,
            type: 'low' as const
