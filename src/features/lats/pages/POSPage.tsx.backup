    const allAppliedDiscounts: any[] = [];

    console.log('ðŸ”§ POS Dynamic Pricing: Processing', cartItems.length, 'cart items');
    console.log('ðŸ”§ POS Dynamic Pricing: Cart items:', cartItems);

